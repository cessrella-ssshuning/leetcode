class Solution {
    /*
    2.10000
    n = 3
    res = res*2
    */
    public double myPow(double x, int n) {
        double res = 1;  
        if(n==0||x==1) return res;
        if(n>0){
            while(n!=1){
                if(n%2!=0){
                    res*=x;
                }
                    x = x*x;
                    n /=2;
                
            }
        }else{
            return 1/x*myPow(x,-(n+1));
        }
        
        return res*x; 
    }
}